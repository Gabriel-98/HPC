solucion serial:
	g++ serial/serial.cpp -o m
	time ./m N maxValue show

solucion con memoria compartida:
	g++ process_shared_memory/shared_memory.cpp -lrt -o m
	time ./m N maxValue numberOfProcess show

solucion con tuberias:
	g++ process_pipes/process_pipes.cpp -o m
	time ./m N maxValue numberOfProcess show
